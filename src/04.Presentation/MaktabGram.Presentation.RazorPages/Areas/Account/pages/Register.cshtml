@page
@model MaktabGram.Presentation.RazorPages.Pages.Account.RegisterModel
@{
}

<div class="w-full max-w-md bg-white rounded-2xl p-8 shadow-3xl lg:p-12 transition-all duration-500 border border-gray-100">

    <header class="text-center mb-8">
        <h1 class="text-4xl font-black text-gray-800 tracking-tight mb-2 app-logo">
            مکتب گرام
        </h1>
        <p class="text-gray-500 text-sm">همین حالا به ما بپیوندید!</p>
    </header>

    <form method="post" class="space-y-5">

        <div>
            <label for="FirstName" class="block text-sm font-medium text-gray-700 mb-1">نام و نام خانوادگی:</label>
            <input type="text"
                   id="FirstName"
                   asp-for="Model.FirstName"
                   placeholder="مثال: مسعود"
                   class="w-full p-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-purple-400 focus:border-purple-500 transition duration-150"
                   required>
        </div>

        <div>
            <label for="LastName" class="block text-sm font-medium text-gray-700 mb-1">نام و نام خانوادگی:</label>
            <input type="text"
                   id="LastName"
                   asp-for="Model.LastName"
                   placeholder="مثال:مالکی"
                   class="w-full p-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-purple-400 focus:border-purple-500 transition duration-150"
                   required>
        </div>

        <div>
            <label for="mobileNumber" class="block text-sm font-medium text-gray-700 mb-1">شماره موبایل:</label>
            <input type="tel"
                   asp-for="Model.Mobile"
                   id="mobileNumber"
                   placeholder="مثال: 09121234567"
                   class="w-full p-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-purple-400 focus:border-purple-500 transition duration-150"
                   required>
        </div>

        <div>
            <label for="username" class="block text-sm font-medium text-gray-700 mb-1">نام کاربری (اختیاری):</label>
            <input type="text"
                   id="username"
                   asp-for="Model.Username"
                   placeholder="مثال: masoud_maleki"
                   class="w-full p-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-purple-400 focus:border-purple-500 transition duration-150">
        </div>

        <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">رمز عبور:</label>
            <input type="password"
                   id="password"
                   asp-for="Model.Password"
                   placeholder="حداقل ۶ کاراکتر"
                   class="w-full p-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-purple-400 focus:border-purple-500 transition duration-150"
                   required>
        </div>

        <div>
            <label for="otp" class="block text-sm font-medium text-gray-700 mb-1">کد یکبار مصرف:</label>
            <input type="number"
                   asp-for="Model.Otp"
                   placeholder="حداقل 5 کاراکتر"
                   class="w-full p-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-purple-400 focus:border-purple-500 transition duration-150"
                   required>
        </div>

        <a id="sendOtpLink"
           data-handler="SendOtp"
           class="signup-button w-full text-white font-bold py-3 px-4 rounded-xl text-lg tracking-wide shadow-lg mt-4 text-center block cursor-pointer">
            ارسال کد یکبار مصرف
        </a>

        <button type="submit"
                class="signup-button w-full text-white font-bold py-3 px-4 rounded-xl text-lg tracking-wide shadow-lg mt-4">
            ثبت نام
        </button>
    </form>

    <div id="message-box" class="mt-4 text-center text-sm">
        <div style="color:red">@ViewBag.Error</div>
    </div>

    <div class="mt-8 text-center text-sm">
        <p class="text-gray-600">
            قبلاً حساب کاربری دارید؟
            <a class="text-purple-600 hover:text-purple-700 font-bold transition duration-150 mr-1" asp-area="" asp-controller="Account" asp-action="Login">وارد شوید</a>

        </p>
    </div>

</div>

@section Scripts {
    <script>
        document.getElementById('sendOtpLink').addEventListener('click', function (e) {
            e.preventDefault();

            const mobileInput = document.getElementById('mobileNumber');
            const mobile = mobileInput.value.trim();

            const url = `/Account/Register?handler=SendOtp&mobile=${encodeURIComponent(mobile)}`;

            alert(url);

            window.location.href = url;
        });
    </script>
}