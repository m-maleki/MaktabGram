@page
@model MaktabGram.Presentation.RazorPages.Pages.Account.LoginModel
@{
    ViewData["Title"] = "ورود";
    Layout = "~/Areas/Account/Shared/_Layout.cshtml";
}

<div class="auth-card">
    <header class="text-center mb-8">
        <h1 class="text-4xl font-black app-logo tracking-tight mb-2">
            مکتب گرام
        </h1>
        <p class="text-gray-500 text-sm">به جامعه خلاق ما خوش آمدید!</p>
    </header>

    <form method="post" class="space-y-6">
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
        {
            <div asp-validation-summary="All" class="alert alert-danger mb-4"></div>
        }
        
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mb-4">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="form-group">
            <label for="username" class="form-label">شماره موبایل</label>
            <input type="tel"
                   id="username"
                   name="Mobile"
                   placeholder="مثال: 09121234567"
                   class="form-input"
                   required>
        </div>

        <div class="form-group">
            <label for="password" class="form-label">رمز عبور</label>
            <input type="password"
                   id="password"
                   name="Password"
                   placeholder="••••••••"
                   class="form-input"
                   required>
        </div>

        <button type="submit"
                class="login-button w-full text-white font-bold py-3 px-4 rounded-xl text-lg tracking-wide shadow-lg">
            ورود
        </button>
    </form>

    <div class="mt-8 text-center text-sm space-y-3">
        <a href="#" class="block text-purple-600 hover:text-purple-700 transition duration-150 font-medium">
            رمز عبور خود را فراموش کرده‌ام
        </a>
        <p class="text-gray-600">
            حساب کاربری ندارید؟
            <a asp-area="Account" asp-page="/Register" class="text-purple-600 hover:text-purple-700 font-bold transition duration-150 mr-1">
                ثبت نام کنید
            </a>
        </p>
    </div>
</div>
