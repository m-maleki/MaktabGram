@page
@model MaktabGram.Presentation.RazorPages.Pages.Account.LoginModel
@{

}

<div class="w-full max-w-sm bg-white rounded-2xl p-8 shadow-3xl lg:p-12 transition-all duration-500 border border-gray-100">

    <header class="text-center mb-8">
        <h1 class="text-4xl font-black text-gray-800 tracking-tight mb-2 app-logo">
            مکتب گرام
        </h1>
        <p class="text-gray-500 text-sm">به جامعه خلاق ما خوش آمدید!</p>
    </header>

    <form method="post" class="space-y-6">

        <div>
            <label for="username" class="block text-sm font-medium text-gray-700 mb-1">شماره موبایل:</label>
            <input type="tel"
                   id="username"
                   name="Mobile"
                   placeholder="مثال: 09121234567"
                   class="w-full p-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-purple-400 focus:border-purple-500 transition duration-150"
                   required>
        </div>

        <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">رمز عبور:</label>
            <input type="password"
                   id="password"
                   name="Password"
                   placeholder="••••••••"
                   class="w-full p-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-purple-400 focus:border-purple-500 transition duration-150"
                   required>
        </div>

        <button type="submit"
                class="signup-button w-full text-white font-bold py-3 px-4 rounded-xl text-lg tracking-wide shadow-lg mt-4">
            ورود
        </button>
    </form>

    <div id="message-box" class="mt-4 text-center text-sm">
        <div style="color:red">@ViewBag.Error</div>
    </div>

    <div class="mt-8 text-center text-sm space-y-3">
        <a href="#" class="block text-purple-600 hover:text-purple-700 transition duration-150 font-medium">رمز عبور خود را فراموش کرده‌ام</a>
        <p class="text-gray-600">
            حساب کاربری ندارید؟
            <a class="text-purple-600 hover:text-purple-700 font-bold transition duration-150 mr-1" asp-area="" asp-controller="Account" asp-action="Register">ثبت نام کنید</a>

            <a href="#"></a>
        </p>
    </div>

</div>