@page
@using MaktabGram.Domain.Core.UserAgg.Entities
@model MaktabGram.Presentation.RazorPages.Pages.User.IndexModel
@{
    ViewData["Title"] = "مدیریت کاربران";
    ViewData["PageTitle"] = "مدیریت کاربران";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

<main class="flex-1 overflow-x-hidden overflow-y-auto p-6">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">مدیریت کاربران</h1>
        <p class="text-gray-600">مشاهده و مدیریت تمام کاربران سیستم</p>
    </div>

    <div class="card p-6">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mb-4">
                @TempData["SuccessMessage"]
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger mb-4">
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- دکمه ایجاد کاربر -->
        <div class="mb-4">
            <a asp-page="Create" class="btn-primary inline-flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                ایجاد کاربر جدید
            </a>
        </div>

        <!-- جستجو -->
        <div class="mb-6">
            <div class="relative">
                <input type="text" 
                       id="user-search" 
                       onkeyup="filterTable()" 
                       placeholder="جستجو بر اساس نام، موبایل یا ایمیل..."
                       class="form-input pl-10">
                <div class="absolute right-3 top-1/2 -translate-y-1/2">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- جدول کاربران -->
        <div class="overflow-x-auto rounded-lg border border-gray-200">
            <table class="min-w-full divide-y divide-gray-200" id="user-table">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">
                            شناسه
                        </th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">
                            تصویر
                        </th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">
                            نام کامل
                        </th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">
                            موبایل
                        </th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">
                            ایمیل
                        </th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">
                            نقش
                        </th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">
                            وضعیت
                        </th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">
                            تاریخ ثبت نام
                        </th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">
                            عملیات
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200" id="user-table-body">
                    @if (Model.Users != null && Model.Users.Any())
                    {
                        @foreach (var user in Model.Users)
                        {
                            <tr class="hover:bg-gray-50 transition duration-150">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    #@user.Id
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="w-12 h-12 rounded-full overflow-hidden border-2 border-gray-200">
                                        @if (!string.IsNullOrEmpty(user.ImageProfileUrl))
                                        {
                                            <img src="@user.ImageProfileUrl" alt="@user.FirstName" class="w-full h-full object-cover">
                                        }
                                        else
                                        {
                                            <div class="w-full h-full bg-gradient-to-br from-indigo-500 to-purple-500 flex items-center justify-center text-white font-bold">
                                                @user.FirstName?.Substring(0, 1)
                                            </div>
                                        }
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">
                                    @user.FirstName @user.LastName
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500" dir="ltr">
                                    @user.Mobile
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @(string.IsNullOrEmpty(user.Email) ? "-" : user.Email)
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (user.IsAdmin)
                                    {
                                        <span class="badge badge-info">ادمین</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-success">کاربر</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (user.Status)
                                    {
                                        <span class="badge badge-success">فعال</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">غیرفعال</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @user.CreateAtFa
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <div class="flex gap-2">
                                        <a asp-page="Update" asp-route-id="@user.Id" 
                                           class="px-3 py-1.5 bg-yellow-500 text-white text-xs rounded-lg hover:bg-yellow-600 transition duration-150 shadow-sm inline-flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                            </svg>
                                            ویرایش
                                        </a>
                                        @if (user.Status)
                                        {
                                            <a asp-page-handler="DeActive" asp-route-userId="@user.Id" 
                                               class="px-3 py-1.5 bg-red-500 text-white text-xs rounded-lg hover:bg-red-600 transition duration-150 shadow-sm inline-flex items-center gap-1">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
                                                </svg>
                                                غیرفعال
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-page-handler="Active" asp-route-userId="@user.Id" 
                                               class="px-3 py-1.5 bg-green-500 text-white text-xs rounded-lg hover:bg-green-600 transition duration-150 shadow-sm inline-flex items-center gap-1">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                </svg>
                                                فعال
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="px-6 py-12 text-center text-gray-500">
                                <div class="flex flex-col items-center gap-3">
                                    <svg class="w-16 h-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                                    </svg>
                                    <p class="text-lg font-medium">هیچ کاربری یافت نشد</p>
                                    <a asp-page="Create" class="btn-primary">
                                        ایجاد اولین کاربر
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- آمار سریع -->
        @if (Model.Users != null && Model.Users.Any())
        {
            <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-4 rounded-lg">
                    <p class="text-sm text-blue-600 font-medium">کل کاربران</p>
                    <p class="text-2xl font-bold text-blue-900">@Model.Users.Count</p>
                </div>
                <div class="bg-gradient-to-br from-green-50 to-green-100 p-4 rounded-lg">
                    <p class="text-sm text-green-600 font-medium">کاربران فعال</p>
                    <p class="text-2xl font-bold text-green-900">@Model.Users.Where(x => x.Status).Count()</p>
                </div>
                <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-4 rounded-lg">
                    <p class="text-sm text-purple-600 font-medium">ادمین‌ها</p>
                    <p class="text-2xl font-bold text-purple-900">@Model.Users.Where(x => x.IsAdmin).Count()</p>
                </div>
            </div>
        }
    </div>
</main>

