@page
@model MaktabGram.Presentation.RazorPages.Pages.Posts.CreateModel
@{
    ViewData["Title"] = "پست جدید";
    ViewData["PageTitle"] = "پست جدید";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<main class="max-w-4xl mx-auto px-4 pt-6 pb-20">
    <div class="bg-white rounded-3xl shadow-xl overflow-hidden">
        <div class="bg-gradient-to-r from-indigo-500 to-purple-600 p-6 text-white">
            <h1 class="text-2xl font-bold text-center">ایجاد پست جدید</h1>
        </div>

        <form method="post" enctype="multipart/form-data" class="p-6 space-y-8">
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <div asp-validation-summary="All" class="alert alert-danger"></div>
            }
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <!-- ناحیه آپلود + پیش‌نمایش -->
            <div class="grid lg:grid-cols-2 gap-8">
                <!-- سمت چپ: آپلود و پیش‌نمایش -->
                <div class="space-y-6">
                    <div id="uploadArea" class="border-4 border-dashed border-gray-300 rounded-2xl p-10 text-center cursor-pointer hover:border-indigo-400 transition"
                         onclick="document.getElementById('fileInput').click()">
                        <input type="file" id="fileInput" asp-for="Model.Img" accept="image/*" class="hidden" onchange="handleFileSelect(event)">

                        <div id="uploadContent">
                            <i data-lucide="image" class="w-16 h-16 text-gray-400 mx-auto mb-4"></i>
                            <p class="text-lg font-medium text-gray-700">عکس را اینجا بکشید یا کلیک کنید</p>
                            <p class="text-sm text-gray-500 mt-2">پشتیبانی از JPG, PNG, GIF</p>
                        </div>

                        <!-- پیش‌نمایش تصویر -->
                        <div id="imagePreview" class="hidden">
                            <img id="previewImg" src="" alt="پیش‌نمایش" class="w-full rounded-xl shadow-lg">
                            <button type="button" onclick="resetUpload()" class="mt-4 text-red-500 hover:text-red-700 text-sm">
                                تغییر عکس
                            </button>
                        </div>

                    </div>

                </div>

                <!-- سمت راست: فرم -->
                <div class="space-y-6">
                    <!-- کپشن -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            کپشن (ایموجی هم می‌تونی بزنی)
                        </label>
                        <textarea asp-for="Model.Caption" rows="6"
                                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent resize-none"
                                  placeholder="امروز چه خبر؟"></textarea>
                    </div>

                    <!-- تگ‌ها -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">تگ‌ها (هشتگ)</label>
                        <div class="flex flex-wrap gap-2 mb-3" id="tagsContainer"></div>
                        <input type="text" asp-for="Model.Tags"
                               class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500"
                               placeholder="مثال: سفر تهران خوشحالم"
                               onkeydown="handleTagKeydown(event)">
                    </div>

                    <!-- تنظیمات -->
                    <div class="bg-gray-50 rounded-xl p-5 space-y-4">
                        <label class="flex items-center justify-between cursor-pointer">
                            <span class="text-sm font-medium text-gray-700">غیرفعال کردن کامنت‌ها</span>
                            <input type="checkbox" name="DisableComments" class="w-5 h-5 text-indigo-600 rounded focus:ring-indigo-500">
                        </label>
                    </div>

                    <!-- دکمه ارسال -->
                    <div class="flex justify-end gap-4 pt-6 border-t border-gray-200">
                      
                        <button type="submit"
                                class="px-10 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-bold rounded-full shadow-lg hover:shadow-xl transform hover:scale-105 transition flex items-center gap-2">
                            ارسال پست
                            <i data-lucide="send" class="w-5 h-5"></i>
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</main>

<!-- الرت سفارشی -->
<div id="customAlert" class="hidden fixed bottom-6 left-1/2 -translate-x-1/2 bg-gray-900 text-white px-6 py-3 rounded-full shadow-2xl z-50">
    <span id="alertMessage"></span>
</div>

@section Scripts {
    <script>
        let selectedFile = null;
        let selectedColor = null;
        const tags = [];

        function handleFileSelect(e) {
            const file = e.target.files[0];
            if (!file) return;

            selectedFile = file;
            const reader = new FileReader();
            reader.onload = function(ev) {
                document.getElementById('previewImg').src = ev.target.result;
                document.getElementById('imagePreview').classList.remove('hidden');
                document.getElementById('uploadContent').classList.add('hidden');
                document.getElementById('colorPreview').classList.add('hidden');
                selectedColor = null;
            };
            reader.readAsDataURL(file);
        }

        function selectColor(color) {
            selectedColor = color;
            document.getElementById('colorPreview').style.backgroundColor = color;
            document.getElementById('colorPreview').classList.remove('hidden');
            document.getElementById('imagePreview').classList.add('hidden');
            document.getElementById('uploadContent').classList.add('hidden');
            document.getElementById('fileInput').value = '';
        }

        function resetUpload() {
            document.getElementById('fileInput').value = '';
            document.getElementById('imagePreview').classList.add('hidden');
            document.getElementById('colorPreview').classList.add('hidden');
            document.getElementById('uploadContent').classList.remove('hidden');
            selectedFile = null;
            selectedColor = null;
        }

        function handleTagKeydown(e) {
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                const value = e.target.value.trim();
                if (value && !tags.includes(value) && tags.length < 10) {
                    tags.push(value);
                    addTagPill(value);
                    e.target.value = '';
                }
            }
        }


        // نمایش پیام
        function showAlert(message, isError = false) {
            const alert = document.getElementById('customAlert');
            const msg = document.getElementById('alertMessage');
            msg.textContent = message;
            alert.className = `fixed bottom-6 left-1/2 -translate-x-1/2 px-6 py-3 rounded-full shadow-2xl z-50 text-white ${isError ? 'bg-red-600' : 'bg-green-600'}`;
            alert.classList.remove('hidden');
            setTimeout(() => alert.classList.add('hidden'), 3000);
        }


        lucide.createIcons();
    </script>
}